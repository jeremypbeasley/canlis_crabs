html {
  min-height 100%
}

* {
  -webkit-tap-highlight-color rgba(0, 0, 0, 0)
  -webkit-font-smoothing antialiased
  font-smoothing antialiased
  box-sizing border-box
}

body {
  height: 100%;
  width: 100vw;
  overflow-y: auto;
  overflow-x: hidden;
  margin: 0;
  font-family: 'HelveticaNeue-Medium', Arial;
}

img {
  max-width: 100%;
}

i {
  font-family: HelveticaNeue-MediumItalic
}

h1, h2, h3, h4, h5 {
  font-weight: normal;
}

.flex {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.flex_center {
  justify-content: center;
}

.block {
  min-height: 90vh;
  width: 100vw;
}

@media laptop {
  .block {
    min-height: 0;
  }
}

.block_last {
  min-height: 70vh;
}

@media laptop {
  .block_last {
    min-height: 0px;
  }
}

.bg_red {
  background: #FF530A;
  /* background: #FA6400; */
}

.bg_navy {
  background: #22466F
}

.bg_navy h2,
.bg_navy .textblock {
  z-index: 9999999;
}

.bg_navy p {
  color: white;
}

.bg_yellow {
  background: #F7B500;
  background: #FFF800;
}

.textblock {
  margin: 9vw;
  font-size: 6vw;
}

@media laptop {
  .textblock {
    margin: 9vw;
    width: 40vw;
    font-size: 3vw;
    position: relative;
  }
}

.textblock p {
  line-height: 120%;
  padding-bottom: 1em;
}

@media laptop {
  .textblock p {

    padding-bottom: 1em;
  }
}

.intro {
  margin-top: 50vw;
}

@media laptop {
  .intro {
    margin-top: 10vw;
    /* margin-top: 90vh */
  }
}

.underline {
  padding-bottom: -.1em;
  border-bottom: .09em solid black;
}

.underline:hover {
  border-color: white;
}

.underline.invert {
  border-color: white;
}

.underline.invert:hover {
  /* border-color: black;
  color: black; */
  box-shadow: 0px 0px 53px 30px rgba(255,83,10,1);
}

a, a:hover, a:visited {
  color: black;
  text-decoration: none;
}

a:hover {
  color: white;
}

a.invert {
  color: white;
}

.small {
  font-size: .5em;
}

.ticker_container {
  transform: rotate(-10deg) scale(2);
  position: fixed;
  top: calc(75vh - 2.5vw);
}

@media laptop {
  .ticker_container {
    transform: scale(1) rotate(-90deg);
    left: 12vw;
    top: 80vw;
    background: red;
  }
}

.ticker {
  height: 10vw;
  width: 400vw;
  position: fixed;
  left: 0;
  animation-name: scroll;
  animation-duration: 8s;
  /* animation-delay: 500ms; */
  animation-timing-function: linear;
  animation-iteration-count: infinite;
  z-index: 800;
}

.ticker img {
  height: 8vw;
  margin-right: 1vw;
}

.ticker .burst {
  animation-name: spin;
  animation-duration: 3s;
  animation-timing-function: linear;
  animation-iteration-count: infinite;
}

@keyframes scroll {
  0% {
    left: 0vw;
  }
  100% {
    left: -93vw;
  }
}

.logo {
  background-image: url(/assets/_img/logo.svg);
  background-size: cover;
  height: 30vw;
  width: 30vw;
  bottom: 10vw;
  right: 10vw;
  position: absolute;
  animation-name: spin;
  animation-duration: 300s;
  animation-timing-function: linear;
  animation-iteration-count: infinite;
  z-index: 999999;
}

@media laptop {
  .logo {
    position: fixed;
    height: 20vw;
    width: 20vw;
    bottom: 5vw;
    right: 5vw;
  }
}

@keyframes spin {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(365deg);
  }
}



.waves {
  width: 3.1em;
  height: 10px;
  position: relative;
  top: 1.7em;
  overflow: hidden;
}

@media laptop {
  .waves {
    top: 1.5em;
  }
}

.waves_inside {
  background: url(/assets/_img/wave.svg);
  background-repeat: repeat-x;
  width: 100vw;
  height: .5em;
  position: absolute;
  left: 0;
  animation-name: scroll2;
  animation-duration: 5s;
  /* animation-delay: 500ms; */
  animation-timing-function: linear;
  animation-iteration-count: infinite;
  z-index: 800;
  top: 0;
  transform: scale(.7);
  transform-origin: 0 0;
}

@media laptop {
  .waves_inside {
    animation-duration: 30s;
    height: .5em;
  }
}

@keyframes scroll2 {
  0% {
    left: 0vw;
  }
  100% {
    left: -25vw;
  }
}

.bigbox {
  position: fixed;
  height: 100vh;
  width: 100vw;
  top: 0;
  left: 0;
  background: rgba(0,30,0,.3)
}

.crab {
  width: 2em;
  height: 2em;
  background-image: url(/assets/_img/crab.gif);
  background-repeat: no-repeat;
  background-size: contain;
}

.wave_container {
  overflow: auto;
}

.bigwaves {
  width: 100vw;
  height: 10px;
  position: relative;
  top: 1.5em;
  overflow: hidden;
  z-index: 999999;
}

.bigwaves_inside {
  background: url(/assets/_img/wave.svg);
  background-repeat: repeat-x;
  width: 200vw;
  height: .5em;
  position: absolute;
  left: 0;
  animation-name: scroll3;
  animation-duration: 10s;
  animation-timing-function: linear;
  animation-iteration-count: infinite;
  z-index: 800;
  top: 0;
}

@keyframes scroll3 {
  0% {
    left: -25vw;
  }
  100% {
    left: 0vw;
  }
}

.menurow {
  margin-bottom: 1em;
  font-size: 1.5vw;
}
.menucolumn {
  flex-grow: 1;
  width: 45%;
  margin-right: 5%;
}

.menurow .menucolumn:nth-child(2) {
