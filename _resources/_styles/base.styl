html {
  min-height 100%
}

* {
  -webkit-tap-highlight-color rgba(0, 0, 0, 0)
  -webkit-font-smoothing antialiased
  font-smoothing antialiased
  box-sizing border-box
}

body {
  height: 100%;
  width: 100vw;
  overflow-y: auto;
  overflow-x: hidden;
  margin: 0;
  font-family: 'HelveticaNeue-Medium', Arial;
}

img {
  max-width: 100%;
}

i {
  font-family: HelveticaNeue-MediumItalic
}

h1, h2, h3, h4, h5 {
  font-weight: normal;
}

.flex {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.flex_center {
  justify-content: center;
}

.block {
  min-height: 100vh;
  width: 100vw;
}

.block_last {
  min-height: 70vh;
}

@media laptop {
  .block_last {
    min-height: 0px;
  }
}

.bg_red {
  background: #FF530A
}

.bg_navy {
  background: #22466F
}

.bg_navy h2,
.bg_navy .textblock {
  z-index: 9999999;
}

.bg_yellow {
  background: #F7B500
}

.textblock {
  margin: 9vw;
}

@media laptop {
  .textblock {
    margin: 9vw;
    width: 40vw;
  }
}

.textblock h2 {
  color: black;
  font-size: 6vw;
  line-height: 120%;
  padding-bottom: 1em;
}

@media laptop {
  .textblock h2 {
    font-size: 3vw;
    padding-bottom: 1em;
  }
}

.intro {
  margin-top: 50vw;
}

@media laptop {
  .intro {
    /* margin-top: 90vh */
  }
}

.underline {
  padding-bottom: -.1em;
  border-bottom: .09em solid black;
}

.underline:hover {
  border-color: white;
}

a, a:hover, a:visited {
  color: black;
  text-decoration: none;
}

a:hover {
  color: white;
}

.ticker_container {
  transform: rotate(-10deg) scale(2);
  position: fixed;
  top: calc(85vh - 2.5vw);
}

@media laptop {
  .ticker_container {
    transform: scale(1);
    top: calc(60vh - 2.5vw);
  }
}

.ticker {
  background-image: url(/assets/_img/ticker2.svg);
  background-size: contain;
  background-repeat: no-repeat;
  /* background-color: blue; */
  height: 10vw;
  width: 400vw;
  position: fixed;
  left: 0;
  animation-name: scroll;
  animation-duration: 15s;
  /* animation-delay: 500ms; */
  animation-timing-function: linear;
  animation-iteration-count: infinite;
  z-index: 800;
}

@keyframes scroll {
  0% {
    left: 0vw;
  }
  100% {
    left: -200vw;
  }
}

.logo {
  background-image: url(/assets/_img/logo.svg);
  background-size: cover;
  /* background-color: blue; */
  height: 30vw;
  width: 30vw;
  top: 10vw;
  right: 10vw;
  position: absolute;
  animation-name: spin;
  animation-duration: 300s;
  animation-timing-function: linear;
  animation-iteration-count: infinite;
}

@media laptop {
  .logo {
    position: fixed;
    height: 10vw;
    width: 10vw;
    top: 5vw;
    right: 5vw;
  }
}

@keyframes spin {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(365deg);
  }
}



.waves {
  width: 3.1em;
  height: 10px;
  position: relative;
  top: 1.7em;
  overflow: hidden;
}

@media laptop {
  .waves {
    top: 1.5em;
  }
}

.waves_inside {
  background: url(/assets/_img/wave.svg);
  background-repeat: repeat-x;
