.bigbox {
  position: fixed;
  height: 100vh;
  width: 100vw;
  top: 0;
  left: 0;
  background: rgba(0,30,0,.3)
}

.crab {
  width: 2em;
  height: 2em;
  background-image: url(/assets/_img/crab.gif);
  background-repeat: no-repeat;
  background-size: contain;
}

.wave_container {
  overflow: auto;
}

.bigwaves {
  width: 100vw;
  height: 10px;
  position: relative;
  top: 1.5em;
  overflow: hidden;
}

.bigwaves_inside {
  background: url(/assets/_img/wave.svg);
  background-repeat: repeat-x;
  background-size: ;
  background-color: red;
  width: 200vw;
  height: .5em;
  position: absolute;
  left: 0;
  animation-name: scroll3;
  animation-duration: 10s;
  /* animation-delay: 500ms; */
  animation-timing-function: linear;
  animation-iteration-count: infinite;
  z-index: 800;
  top: 0;
}

